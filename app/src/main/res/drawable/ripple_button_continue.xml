<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#f7941d"> <!-- The ripple will be red -->

    <!-- the normal bg color will be light grey -->
    <item>
        <color android:color="#f7941d" />
    </item>

    <!-- make sure the ripple doesn't exceed the bounds -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#f7941d" />
            <corners
                android:radius="@dimen/dimen10dp"/>
        </shape>
    </item>

    <item
        android:left="-2dp"
        android:right="-2dp"
        android:top="@dimen/dimen45dp">
        <shape android:shape="line">
            <padding android:bottom="-1dp" />
            <corners
                android:radius="@dimen/dimen10dp"/>
            <stroke
                android:width="@dimen/one1_dp"
                android:color="@color/black" />
        </shape>
    </item>
</ripple>