<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="callback"
            type="com.thresholdsoft.apollofeedback.ui.storesetup.dialog.GetStoresDialogMvpView" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transperent_black_color"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dimen100dp"
            android:layout_marginTop="@dimen/dimen50dp"
            android:layout_marginEnd="@dimen/dimen100dp"
            android:layout_marginBottom="@dimen/dimen50dp"
            android:background="@color/white"
            android:orientation="vertical"
            tools:ignore="RtlCompat">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:padding="@dimen/dimen5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dimen5dp"
                    android:text="Select Store"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen16sp" />

                <ImageView
                    android:layout_width="@dimen/thirty30_sp"
                    android:layout_height="@dimen/thirty30_sp"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@string/app_name"
                    android:onClick="@{()-> callback.dismissDialog()}"
                    android:padding="@dimen/dimen5dp"
                    android:src="@drawable/ic_close_view"
                    app:tint="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/EditTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/doctor_name_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:hint="Search by store name"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:textStyle="normal"
                        android:padding="@dimen/dimen10dp"
                        android:singleLine="true"
                        android:textSize="@dimen/fifteen_sp" />
                </com.google.android.material.textfield.TextInputLayout>


                <ImageView
                    android:layout_width="@dimen/twentyseven27_dp"
                    android:layout_height="@dimen/twentyseven27_dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dimen20dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_search" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/stores_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen5dp"
                android:layout_marginEnd="@dimen/dimen5dp" />
        </LinearLayout>

    </LinearLayout>
</layout>
