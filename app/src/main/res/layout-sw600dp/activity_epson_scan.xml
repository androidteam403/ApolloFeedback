<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_bg">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen55dp"
                    android:layout_height="@dimen/dimen55dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_apollo_circle_logo" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen10dp"
                    android:layout_marginLeft="@dimen/dimen10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="@string/label_items_payment"
                        android:textAllCaps="true"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/dimen20sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@{model.customerofferScreen.customerName}"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/dimen16sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen10dp"
                            android:layout_marginLeft="@dimen/dimen10dp"
                            android:layout_marginTop="@dimen/dimen3dp"
                            android:background="@drawable/black_curves_bg"
                            android:paddingStart="@dimen/dimen7dp"
                            android:paddingTop="@dimen/dimen2dp"
                            android:paddingEnd="@dimen/dimen7dp"
                            android:paddingBottom="@dimen/dimen2dp"
                            android:visibility="@{model.customerofferScreen.customerType != null &amp;&amp; !model.customerofferScreen.customerType.isEmpty ? view.VISIBLE : view.GONE}">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_regular"
                                android:text="@{model.customerofferScreen.customerType}"
                                android:textAllCaps="true"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/dimen14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen100dp"
                android:gravity="center">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimen20dp"
                    android:background="@drawable/new_transparent_bg"
                    android:orientation="horizontal">

                    <pl.droidsonroids.gif.GifImageView
                        android:layout_width="@dimen/dimen150dp"
                        android:layout_height="@dimen/dimen120dp"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/raw_scan_new" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen25dp"
                            android:layout_marginTop="@dimen/dimen10dp"
                            android:layout_marginEnd="@dimen/dimen50dp"
                            android:fontFamily="@font/roboto_medium"
                            android:paddingTop="@dimen/dimen10dp"
                            android:paddingEnd="@dimen/dimen10dp"
                            android:text="Insert your prescription\n and click below button"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimen20sp" />


                        <TextView
                            android:id="@+id/scan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen50dp"
                            android:layout_marginTop="@dimen/dimen10dp"
                            android:layout_marginEnd="@dimen/dimen10dp"
                            android:layout_marginBottom="@dimen/dimen20dp"
                            android:background="@drawable/scan_btn_bg"
                            android:paddingStart="@dimen/dimen15dp"
                            android:paddingTop="@dimen/dimen10dp"
                            android:paddingEnd="@dimen/dimen15dp"
                            android:paddingBottom="@dimen/dimen10dp"
                            android:text="SCAN NOW"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen20sp"
                            android:textStyle="bold" />


                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen40dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/red_btn_bg"
                    android:gravity="center"
                    android:paddingStart="@dimen/dimen15dp"
                    android:paddingTop="@dimen/dimen5dp"
                    android:paddingEnd="@dimen/dimen15dp"
                    android:paddingBottom="@dimen/dimen10dp"
                    android:text="Your scannned medicine needed prescription"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen18sp"
                    android:textStyle="bold" />

            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="1"
            tools:ignore="DisableBaselineAlignment">

            <LinearLayout
                android:layout_width="@dimen/dimen0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:background="@color/color_white"
                android:gravity="start"
                android:orientation="horizontal"
                android:padding="@dimen/dimen5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen70dp"
                        android:layout_height="@dimen/dimen70dp"
                        android:layout_marginTop="@dimen/dimen3dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_cart" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginLeft="@dimen/dimen5dp"
                        android:layout_marginTop="@dimen/dimen5dp"

                        android:fontFamily="@font/poppins_extra_bold"
                        android:gravity="top"
                        android:text="@{String.valueOf(model.customerScreen.noofSkus)}"
                        android:textColor="@color/color_red"
                        android:textSize="@dimen/dimen20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen5dp"
                        android:layout_marginLeft="@dimen/dimen5dp"
                        android:fontFamily="@font/poppins_extra_bold"
                        android:gravity="top"
                        android:text="@string/label_items_in_your_cart"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen25sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dimen5dp"
                android:layout_marginLeft="@dimen/dimen5dp"
                android:layout_weight=".2"
                android:background="@drawable/top_right_curve_bg"
                android:orientation="vertical"
                android:padding="@dimen/dimen5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen70dp"
                        android:layout_height="@dimen/dimen70dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/dimen5dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_amount" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dimen5dp"
                        android:layout_marginLeft="@dimen/dimen5dp"
                        android:layout_marginTop="@dimen/dimen10dp"
                        android:fontFamily="@font/poppins_extra_bold"
                        android:text="@string/label_amont_nsaved"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen25sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_extra_bold"
                        android:text="@string/label_rupee_symbol"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen3dp"
                        android:layout_marginLeft="@dimen/dimen3dp"
                        android:fontFamily="@font/poppins_extra_bold"

                        android:text="@{model.customerScreen.payment.discountValue}"
                        android:textColor="@color/color_red"
                        android:textSize="@dimen/dimen30sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dimen5dp"
                android:layout_marginLeft="@dimen/dimen5dp"
                android:layout_weight=".2"
                android:background="@drawable/top_right_curve_bg"
                android:orientation="vertical"
                android:padding="@dimen/dimen5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen70dp"
                        android:layout_height="@dimen/dimen70dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/dimen5dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_redeem_points" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dimen5dp"
                        android:layout_marginLeft="@dimen/dimen5dp"
                        android:layout_marginTop="@dimen/dimen10dp"
                        android:fontFamily="@font/poppins_extra_bold"
                        android:text="@string/label_redeem_npoints"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen25sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_extra_bold"
                        android:text="@string/label_rupee_symbol"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen3dp"
                        android:layout_marginLeft="@dimen/dimen3dp"
                        android:fontFamily="@font/poppins_extra_bold"

                        android:text="@{model.customerScreen.payment.giftAmount}"
                        android:textColor="@color/color_green"
                        android:textSize="@dimen/dimen30sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dimen5dp"
                android:layout_marginLeft="@dimen/dimen5dp"
                android:layout_weight=".2"
                android:background="@drawable/top_right_curve_bg"
                android:orientation="vertical"
                android:padding="@dimen/dimen5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen70dp"
                        android:layout_height="@dimen/dimen70dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_payment" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen5dp"
                        android:layout_marginLeft="@dimen/dimen5dp"
                        android:fontFamily="@font/poppins_extra_bold"
                        android:text="@string/label_bill_nvalue"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen25sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_extra_bold"
                        android:text="@string/label_rupee_symbol"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen3dp"
                        android:layout_marginLeft="@dimen/dimen3dp"
                        android:fontFamily="@font/poppins_extra_bold"

                        android:text="@{model.customerScreen.payment.amouttobeCollected}"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen30sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dimen5dp"
                android:layout_marginLeft="@dimen/dimen5dp"
                android:layout_weight=".2"
                android:background="@color/color_yellow"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/dimen10dp">

                <ImageView
                    android:layout_width="@dimen/dimen100dp"
                    android:layout_height="@dimen/dimen100dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_qr_code" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:fontFamily="@font/poppins_extra_bold"
                    android:text="@string/label_continue_npayment"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen22sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <data>

        <variable
            name="model"
            type="com.thresholdsoft.apollofeedback.commonmodels.FeedbackSystemResponse" />


        <variable
            name="callback"
            type="com.thresholdsoft.apollofeedback.ui.whyscanprescription.epsonscan.EpsonScanActivityCallback" />

        <variable
            name="view"
            type="android.view.View" />

    </data>
</layout>