        <RelativeLayout
            android:id="@+id/offers_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen30dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/dimen50dp"
                    android:layout_height="@dimen/dimen50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dimen50dp"
                    android:layout_marginRight="@dimen/dimen50dp"
                    android:contentDescription="@string/app_name"
                    android:onClick="@{()-> callback.onClickRefreshIcon()}"
                    android:src="@drawable/ic_refresh" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen100dp"
                        android:layout_height="@dimen/dimen100dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_apollo_circle_logo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginLeft="@dimen/dimen10dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="@{storeName}"
                        android:textAllCaps="true"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/dimen40sp" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>


