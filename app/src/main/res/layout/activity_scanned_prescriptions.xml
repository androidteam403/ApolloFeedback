<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen10dp"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen55dp"
                        android:layout_height="@dimen/dimen55dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_apollo_circle_logo" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginLeft="@dimen/dimen10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_bold"
                            android:text="@string/label_items_payment"
                            android:textAllCaps="true"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/dimen18sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_regular"
                                android:text="@{model.customerofferScreen.customerName != null &amp;&amp; !model.customerofferScreen.customerName.isEmpty ? model.customerofferScreen.customerName : `---`}"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/dimen14sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen5dp"
                                android:layout_marginLeft="@dimen/dimen5dp"
                                android:background="@drawable/black_curves_bg"
                                android:paddingStart="@dimen/dimen7dp"
                                android:paddingTop="@dimen/dimen2dp"
                                android:paddingEnd="@dimen/dimen7dp"
                                android:paddingBottom="@dimen/dimen2dp"
                                android:visibility="@{model.customerofferScreen.customerType != null &amp;&amp; !model.customerofferScreen.customerType.isEmpty ? view.VISIBLE : view.GONE}">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text="@{model.customerofferScreen.customerType}"
                                    android:textAllCaps="true"
                                    android:textColor="@color/color_white"
                                    android:textSize="@dimen/dimen12sp" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Your Scanned Prescription"
                        android:textAllCaps="true"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/dimen14sp" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/dimen60dp"
                    android:layout_height="@dimen/dimen60dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/apollo_circle_logo" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/label_your_scanned_prescriptions"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/dimen20sp"
                        android:textStyle="bold" />

                    <!--                    <TextView-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_gravity="center_horizontal"-->
                    <!--                        android:text="@string/label_insert_your_prescriptions"-->
                    <!--                        android:textColor="@color/color_white"-->
                    <!--                        android:textSize="@dimen/dimen25sp"-->
                    <!--                        android:textStyle="bold" />-->


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="visible">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/prescription_list_recyclerview"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen150dp"
                    android:layout_gravity="center_horizontal" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen10dp"
                    android:layout_marginEnd="@dimen/dimen10dp"
                    android:background="@drawable/dotted_border"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:fontFamily="@font/roboto_medium"
                        android:paddingStart="@dimen/dimen10dp"
                        android:paddingTop="@dimen/dimen10dp"
                        android:paddingEnd="@dimen/dimen10dp"
                        android:text="Insert your\nprescription\n and click\nbelow button"
                        android:textColor="@color/white" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/thirteen13sp"
                        android:layout_marginTop="@dimen/five5_sp"
                        android:layout_marginEnd="@dimen/five5_sp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/scan_btn_bg"
                        android:gravity="center"
                        android:onClick="@{()-> callback.onClickScanAgain()}"
                        android:paddingStart="8dp"
                        android:paddingTop="@dimen/five5_sp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="@dimen/five5_sp"

                        android:text="SCAN NOW"
                        android:textColor="@color/black"
                        android:textStyle="bold" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/dimen50dp"
                    android:layout_height="@dimen/dimen50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/bg_redsolid_whitestroke_rounded"
                    android:gravity="center"
                    android:onClick="@{()-> callback.onClickScanAgain()}"
                    android:orientation="vertical"
                    android:visibility="@{isScanAgain ? view.VISIBLE : view.GONE}">

                    <pl.droidsonroids.gif.GifImageView
                        android:layout_width="@dimen/dimen25dp"
                        android:layout_height="@dimen/dimen25dp"
                        android:layout_gravity="center_horizontal"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/raw_scan_new" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/label_scan_nagain"
                        android:textColor="@color/color_white"
                        android:textSize="8sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/done"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen45dp"
                    android:layout_marginStart="@dimen/dimen50dp"
                    android:background="@drawable/scan_btn_bg"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:paddingStart="@dimen/dimen25dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="5dp"
                        android:text="Done"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="@dimen/dimen30sp"
                        android:layout_height="@dimen/dimen30sp"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="@dimen/dimen10dp"
                        android:contentDescription="@string/app_name"
                        android:paddingEnd="@dimen/four4_dp"
                        android:src="@drawable/tickmark" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="@dimen/dimen90dp"
                android:layout_height="@dimen/dimen90dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_redsolid_whitestroke_rounded"
                android:gravity="center"
                android:onClick="@{()-> callback.onClickScanAgain()}"
                android:orientation="vertical">

                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="@dimen/forty_dp"
                    android:layout_height="@dimen/forty_dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/raw_scan_new" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/label_scan_nagain"
                    android:textColor="@color/color_white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="1"
            tools:ignore="DisableBaselineAlignment">

            <LinearLayout
                android:layout_width="@dimen/dimen0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:background="@color/color_white"
                android:gravity="start"
                android:orientation="horizontal"
                android:padding="@dimen/dimen5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen20dp"
                        android:layout_height="@dimen/dimen20dp"
                        android:layout_marginTop="@dimen/dimen3dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_cart" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen5dp"
                        android:layout_marginLeft="@dimen/dimen5dp"
                        android:fontFamily="@font/poppins_extra_bold"
                        android:gravity="top"
                        android:text="@{String.valueOf(model.customerScreen.noofSkus)}"

                        android:textColor="@color/color_red"
                        android:textSize="@dimen/dimen12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen5dp"
                        android:layout_marginLeft="@dimen/dimen5dp"
                        android:fontFamily="@font/poppins_extra_bold"
                        android:gravity="top"
                        android:text="@string/label_items_in_your_cart"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dimen5dp"
                android:layout_marginLeft="@dimen/dimen5dp"
                android:layout_weight=".2"
                android:background="@drawable/top_right_curve_bg"
                android:orientation="vertical"
                android:padding="@dimen/dimen5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen20dp"
                        android:layout_height="@dimen/dimen20dp"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_amount" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dimen5dp"
                        android:layout_marginLeft="@dimen/dimen5dp"
                        android:layout_marginTop="@dimen/dimen5dp"
                        android:fontFamily="@font/poppins_extra_bold"
                        android:text="@string/label_amont_nsaved"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_extra_bold"
                        android:text="@string/label_rupee_symbol"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen3dp"
                        android:layout_marginLeft="@dimen/dimen3dp"

                        android:fontFamily="@font/poppins_extra_bold"
                        android:text="@{model.customerScreen.payment.discountValue}"
                        android:textColor="@color/color_red"
                        android:textSize="@dimen/dimen16sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dimen5dp"
                android:layout_marginLeft="@dimen/dimen5dp"
                android:layout_weight=".2"
                android:background="@drawable/top_right_curve_bg"
                android:orientation="vertical"
                android:padding="@dimen/dimen5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen20dp"
                        android:layout_height="@dimen/dimen20dp"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_redeem_points" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dimen5dp"
                        android:layout_marginLeft="@dimen/dimen5dp"
                        android:layout_marginTop="@dimen/dimen5dp"
                        android:fontFamily="@font/poppins_extra_bold"
                        android:text="@string/label_redeem_npoints"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_extra_bold"
                        android:text="@string/label_rupee_symbol"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen3dp"
                        android:layout_marginLeft="@dimen/dimen3dp"
                        android:fontFamily="@font/poppins_extra_bold"

                        android:text="@{model.customerScreen.payment.giftAmount}"
                        android:textColor="@color/color_green"
                        android:textSize="@dimen/dimen16sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dimen5dp"
                android:layout_marginLeft="@dimen/dimen5dp"
                android:layout_weight=".2"
                android:background="@drawable/top_right_curve_bg"
                android:orientation="vertical"
                android:padding="@dimen/dimen5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen30dp"
                        android:layout_height="@dimen/dimen30dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_payment" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen5dp"
                        android:layout_marginLeft="@dimen/dimen5dp"
                        android:fontFamily="@font/poppins_extra_bold"
                        android:text="@string/label_bill_nvalue"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_extra_bold"
                        android:text="@string/label_rupee_symbol"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen3dp"
                        android:layout_marginLeft="@dimen/dimen3dp"
                        android:fontFamily="@font/poppins_extra_bold"

                        android:text="@{model.customerScreen.payment.amouttobeCollected}"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen16sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dimen5dp"
                android:layout_marginLeft="@dimen/dimen5dp"
                android:layout_weight=".2"
                android:background="@color/color_yellow"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/dimen5dp">

                <ImageView
                    android:layout_width="@dimen/dimen30dp"
                    android:layout_height="@dimen/dimen30dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_qr_code" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen5dp"
                    android:fontFamily="@font/poppins_extra_bold"
                    android:text="@string/label_continue_npayment"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen12sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <data>

        <variable
            name="model"
            type="com.thresholdsoft.apollofeedback.commonmodels.FeedbackSystemResponse" />


        <variable
            name="callback"
            type="com.thresholdsoft.apollofeedback.ui.scannedprescriptions.ScannedPrescriptionsActivityCallback" />

        <variable
            name="view"
            type="android.view.View" />

        <variable
            name="isScanAgain"
            type="Boolean" />

    </data>
</layout>
