<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grey_border_bg"
        android:layout_margin="@dimen/dimen10dp"
        android:padding="@dimen/dimen30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/label_voice_record_calibration"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dimen10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/label_voice_record_key"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/voice_record_key_edit"
                    android:layout_width="@dimen/dimen100dp"
                    android:layout_height="@dimen/dimen40dp"
                    android:layout_marginStart="@dimen/dimen10dp"
                    android:background="@drawable/bg_voice_record_calibration_editbox"
                    android:maxLength="1"
                    android:gravity="center"
                    android:inputType="text"
                    android:importantForAutofill="no"
                    tools:ignore="LabelFor" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>