<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/stringcustomer_voice_feedback"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen18sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/progress_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen20dp"
                android:visibility="visible">

                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="@dimen/dimen253dp"
                    android:layout_height="@dimen/dimen253dp"
                    android:background="@drawable/circle_shape"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="50"
                    android:progressDrawable="@drawable/circular_progress_bar"
                    android:rotation="30"
                    android:textAlignment="center" />

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="@dimen/dimen180dp"
                    android:layout_height="@dimen/dimen180dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_audio_circle"
                    android:paddingLeft="@dimen/dimen30dp"
                    android:paddingTop="@dimen/dimen20dp"
                    android:paddingRight="@dimen/dimen30dp"
                    android:paddingBottom="@dimen/dimen120dp"
                    android:src="@drawable/ic_fst_mic" />

                <TextView
                    android:id="@+id/rec_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/dimen35dp"
                    android:layout_marginTop="@dimen/dimen70dp"
                    android:text="@string/stringrecording_starts"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen15sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rec_text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimen60dp"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dimen10dp"
                    tools:ignore="RtlSymmetry">

                    <TextView
                        android:id="@+id/audio_sec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textColor="@color/another_red"
                        android:textSize="@dimen/dimen15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen5dp"
                        android:text="@string/stringsec"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/close"
                    android:layout_width="@dimen/dimen43dp"
                    android:layout_height="@dimen/dimen43dp"
                    android:layout_marginStart="@dimen/dimen170dp"
                    android:layout_marginTop="@dimen/dimen51dp"
                    android:layout_marginBottom="@dimen/dimen40dp"
                    android:background="@drawable/ic_audio_record_close"
                    tools:ignore="RtlSymmetry" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/recording_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen20dp"
                android:visibility="gone">


                <ImageView
                    android:id="@+id/sec_image"
                    android:layout_width="@dimen/dimen180dp"
                    android:layout_height="@dimen/dimen180dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_audio_circle" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dimen30dp"
                        android:layout_height="@dimen/dimen40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dimen5dp"
                        android:src="@drawable/ic_sec_mic" />

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/rec_waves"
                        android:layout_width="@dimen/dimen80dp"
                        android:layout_height="@dimen/dimen30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dimen10dp"
                        android:src="@drawable/sound_animation" />

                    <TextView
                        android:id="@+id/recording"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/stringrecording"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        tools:ignore="RtlSymmetry">

                        <TextView
                            android:id="@+id/sec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30"
                            android:textColor="@color/another_red"
                            android:textSize="@dimen/dimen15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen5dp"
                            android:text="@string/stringsec"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen15sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/re_record"
                        android:layout_width="@dimen/dimen30dp"
                        android:layout_height="@dimen/dimen30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dimen5dp"
                        android:layout_marginBottom="@dimen/dimen10dp"
                        android:src="@drawable/ic_record_again" />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/sec_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="@dimen/dimen252dp"
                    android:layout_height="@dimen/dimen252dp"
                    android:layout_centerInParent="true"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="65"
                    android:progressDrawable="@drawable/circular_progress_bar"
                    android:rotation="30"
                    android:textAlignment="center" />

                <ImageView
                    android:id="@+id/close2"
                    android:layout_width="@dimen/dimen43dp"
                    android:layout_height="@dimen/dimen43dp"
                    android:layout_marginStart="@dimen/dimen170dp"
                    android:layout_marginTop="@dimen/dimen51dp"
                    android:layout_marginBottom="@dimen/dimen40dp"
                    android:background="@drawable/ic_audio_record_close"
                    tools:ignore="RtlSymmetry" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/submit_rec_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen20dp"
                android:visibility="gone">


                <ImageView
                    android:id="@+id/third_image"
                    android:layout_width="@dimen/dimen180dp"
                    android:layout_height="@dimen/dimen180dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_third_circle" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:onClick="@{()-> callback.onClickAudioPlayorStop()}"
                        android:paddingStart="@dimen/dimen10dp"
                        android:paddingTop="@dimen/dimen20dp"
                        android:paddingEnd="@dimen/dimen10dp"
                        android:paddingBottom="@dimen/dimen10dp"
                        android:src="@drawable/ic_play" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dimen10dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        tools:ignore="RtlSymmetry">

                        <TextView
                            android:id="@+id/recording_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30"
                            android:textColor="@color/another_red"
                            android:textSize="@dimen/dimen15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen5dp"
                            android:text="@string/stringsec"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen15sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dimen35dp"
                        android:gravity="center"
                        android:text="@string/stringsubmit"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/close3"
                    android:layout_width="@dimen/dimen43dp"
                    android:layout_height="@dimen/dimen43dp"
                    android:layout_marginStart="@dimen/dimen130dp"
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:layout_marginBottom="@dimen/dimen40dp"
                    android:background="@drawable/ic_audio_record_close"
                    tools:ignore="RtlSymmetry" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/listening_rec_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen20dp"
                android:visibility="gone">


                <ImageView
                    android:id="@+id/fourth_image"
                    android:layout_width="@dimen/dimen180dp"
                    android:layout_height="@dimen/dimen180dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_third_circle" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimen60dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/listen"
                        android:layout_width="@dimen/dimen80dp"
                        android:layout_height="@dimen/dimen30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dimen20dp"
                        android:src="@drawable/ic_listen_audio" />
                    <ImageView
                        android:id="@+id/listen2"
                        android:layout_width="@dimen/dimen100dp"
                        android:layout_height="@dimen/dimen50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dimen10dp"
                        android:visibility="gone"
                        android:src="@drawable/ic_pause" />

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/imageGif"
                        android:layout_width="@dimen/dimen80dp"
                        android:layout_height="@dimen/dimen30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dimen10dp"
                        android:src="@drawable/sound_animation" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dimen20dp"
                        android:gravity="center"
                        android:text="@string/stringsubmit"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen18sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <ProgressBar
                    android:id="@+id/fourth_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="@dimen/dimen252dp"
                    android:layout_height="@dimen/dimen252dp"
                    android:layout_centerInParent="true"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="@{callback.calculateProgressBarProgress(recordedTime)}"
                    android:progressDrawable="@drawable/circular_progress_bar"
                    android:rotation="30"
                    android:textAlignment="center" />

                <ImageView
                    android:id="@+id/close4"
                    android:layout_width="@dimen/dimen43dp"
                    android:layout_height="@dimen/dimen43dp"
                    android:layout_marginStart="@dimen/dimen170dp"
                    android:layout_marginTop="@dimen/dimen51dp"
                    android:layout_marginBottom="@dimen/dimen40dp"
                    android:background="@drawable/ic_audio_record_close"
                    tools:ignore="RtlSymmetry" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <data>

        <variable
            name="callback"
            type="com.thresholdsoft.apollofeedback.ui.offersnow.OffersNowActivityCallback" />

        <variable
            name="recordedTime"
            type="String" />

    </data>
</layout>