<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/screenbackground">

        <LinearLayout
            android:id="@+id/parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dimen20dp">

            <ImageView
                android:layout_width="@dimen/eighty_sp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_setting" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Please Login with Access Key"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/accesskey_error_bg"
                android:layout_width="@dimen/fivehundredthirty530dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen20dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dimen10dp"
                android:paddingRight="@dimen/dimen10dp"
                android:paddingBottom="@dimen/dimen5dp">


                <TextView
                    android:id="@+id/accesskey_error_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen5dp"
                    android:text="Please Enter Valid Key"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fifteen_sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/accesskey_textinput"
                    android:layout_width="@dimen/fivehundred500_sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five5_sp"
                    android:background="@drawable/phone_edittext_bg"
                    android:imeOptions="flagNoExtractUi"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    tools:ignore="LabelFor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/fivehundred_dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen20dp"
                android:gravity="end"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/lang_selection_btn_bg"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Submit"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen20sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/close_icon"
            android:layout_width="@dimen/dimen50dp"
            android:layout_height="@dimen/dimen50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/dimen10dp"
            android:src="@drawable/ic_close" />

    </RelativeLayout>
</layout>