        <LinearLayout
            android:layout_width="325dp"
            android:layout_height="@dimen/dimen300dp"
            android:layout_below="@id/apollo_close"
            android:layout_centerInParent="true"
            android:background="@drawable/pink_bg_recog">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/warning_image"
                        android:layout_width="@dimen/dimen25dp"
                        android:layout_height="@dimen/dimen25dp"
                        android:src="@drawable/alert"
                        app:tint="@color/red" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/your_details_not_found"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your details not found"
                            android:textColor="#ed1c24"
                            android:textSize="@dimen/dimen16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/verified_your_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Verified your details"
                            android:textColor="@color/teal_blue"
                            android:textSize="@dimen/dimen16sp"
                            android:textStyle="bold"
                            android:visibility="gone" />


                        <TextView
                            android:id="@+id/fill_your_details_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fill your details"
                            android:textSize="@dimen/dimen12sp"
                            android:textStyle="bold" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dimen15dp"
                    android:layout_marginTop="@dimen/dimen20dp"
                    android:layout_marginEnd="@dimen/dimen15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="@dimen/dimen72dp"
                        android:layout_height="@dimen/dimen72dp"
                        android:background="@drawable/circle_image_bg"
                        android:gravity="center">

                        <com.thresholdsoft.apollofeedback.utils.CircularImageView
                            android:id="@+id/person_image"
                            android:layout_width="@dimen/dimen70dp"
                            android:layout_height="@dimen/dimen70dp"
                            android:background="@drawable/circle_image_bg"
                            android:contentDescription="@string/app_name"
                            android:scaleType="fitXY"
                            android:src="@drawable/boy" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Soumya Rai"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen14sp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <EditText
                            android:id="@+id/name_f"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/grey_bg_edittext"
                            android:hint="Name"
                            android:lines="1"
                            android:padding="@dimen/dimen5dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/greY"
                            android:textSize="@dimen/dimen14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/user_phone_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12345 67891"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen14sp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <EditText
                            android:id="@+id/phoneNo_f"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen5dp"
                            android:background="@drawable/grey_bg_edittext"
                            android:hint="Phone No."
                            android:inputType="number"
                            android:lines="1"
                            android:maxLength="10"
                            android:padding="@dimen/dimen5dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/greY"
                            android:textSize="@dimen/dimen14sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/available_credits_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_light"
                                android:text="Available points: "
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/available_points"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen5dp"
                                android:fontFamily="@font/poppins_bold"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dimen15dp"
                    android:layout_marginTop="@dimen/dimen20dp"
                    android:layout_marginEnd="@dimen/dimen15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen30dp"
                        android:layout_height="@dimen/dimen30dp"
                        android:src="@drawable/greentick_1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen7dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="I read the "
                                android:textColor="#898989"
                                android:textSize="@dimen/dimen12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Privacy Policy "
                                android:textColor="@color/teal_blue"
                                android:textSize="@dimen/dimen12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="and"
                                android:textSize="@dimen/dimen12sp"
                                android:textStyle="bold" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="I accept the "
                                android:textColor="#898989"
                                android:textSize="@dimen/dimen12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Terms &amp; Conditions "
                                android:textColor="@color/teal_blue"
                                android:textSize="@dimen/dimen12sp"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/onClickContinue_f"
                    android:layout_width="@dimen/dimen120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen20dp"
                    android:visibility="gone"
                    android:background="@drawable/ripple_button_continue"
                    android:padding="@dimen/four4_dp">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:text="Continue"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen18sp"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>
</layout>