<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_bg"
        android:gravity="center"
        tools:context=".ui.offersnow.OffersNowActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen60dp"
                    android:layout_height="@dimen/dimen60dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_apollo_circle_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen10dp"
                    android:layout_marginLeft="@dimen/dimen10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/label_offers_now"
                    android:textAllCaps="true"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/dimen25sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/offers_now_one"
                    android:layout_width="@dimen/dimen150dp"
                    android:layout_height="@dimen/dimen220dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/offers_now_two"
                    android:layout_width="@dimen/dimen150dp"
                    android:layout_height="@dimen/dimen220dp"
                    android:layout_marginStart="@dimen/dimen3dp"
                    android:layout_marginLeft="@dimen/dimen3dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/offers_now_three"
                    android:layout_width="@dimen/dimen150dp"
                    android:layout_height="@dimen/dimen220dp"
                    android:layout_marginStart="@dimen/dimen3dp"
                    android:layout_marginLeft="@dimen/dimen3dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/offers_now_four"
                    android:layout_width="@dimen/dimen150dp"
                    android:layout_height="@dimen/dimen220dp"
                    android:layout_marginStart="@dimen/dimen3dp"
                    android:layout_marginLeft="@dimen/dimen3dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen15dp"
                android:layout_marginEnd="@dimen/dimen30dp"
                android:layout_marginRight="@dimen/dimen30dp"
                android:gravity="end">

                <ImageView
                    android:layout_width="@dimen/dimen80dp"
                    android:layout_height="@dimen/dimen40dp"
                    android:contentDescription="@string/app_name"
                    android:onClick="@{()-> callback.onClickSkip()}"
                    android:src="@drawable/ic_skip" />

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <data>

        <variable
            name="callback"
            type="com.thresholdsoft.apollofeedback.ui.offersnow.OffersNowActivityCallback" />
    </data>
</layout>